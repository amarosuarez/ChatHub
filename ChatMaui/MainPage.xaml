<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ChatMaui.VM"
             x:Class="ChatMaui.MainPage">

    <ContentPage.BindingContext>
        <vm:ChatVM></vm:ChatVM>
    </ContentPage.BindingContext>
    
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Label
                    x:Name="error"
                    IsVisible="False"
                HorizontalOptions="Center"
                    TextColor="Red"></Label>

            <HorizontalStackLayout HorizontalOptions="Center">
                <Entry
                    x:Name="groupName"
                    FontSize="18"
                    Placeholder="Type group name"
                    Text="{Binding Group}"
                    HorizontalOptions="Center"/>

                <Button
                    x:Name="joinGroupButton"
                    Text="Join" 
                    Command="{Binding JoinGroupCommand}"
                    HorizontalOptions="Fill" />

                <Button
                    x:Name="removeGroupButton"
                    Text="Exit"
                    Margin="10, 0, 0, 0"
                    BackgroundColor="Red"
                    Command="{Binding ExitGroupCommand}"
                    HorizontalOptions="Fill" />
            </HorizontalStackLayout>

            <Label
                Text="Escribe tu nombre de usuario:"
                FontSize="16"
                HorizontalOptions="Center" />
            
            <Entry
                x:Name="myUsername"
                FontSize="18"
                Text="{Binding Name}"
                Placeholder="Type your username here"
                HorizontalOptions="Center"/>

            <Label
                Text="Escribe tu mensaje:"
                FontSize="16"
                HorizontalOptions="Center" />
            
            <Entry
                x:Name="myChatMessages"
                FontSize="18"
                Text="{Binding Message}"
                Placeholder="Type your message here"
                HorizontalOptions="Center"/>

            <Button
                x:Name="sendButton"
                Text="Send" 
                Command="{Binding SendMessageCommand}"
                HorizontalOptions="Fill" />


            <Label
                x:Name="chatMessages"
                FontSize="18"
                Text="{Binding ChatMessages}"
                HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
